<body>

  <main id="main">
    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
      <div class="container">

        <div class="row gy-4">
          
            <div class="col-lg-8">
              <div class="portfolio-details-slider swiper">
                <div class="swiper-wrapper align-items-center">
                  <% imageData.forEach((value) => { %>
                  <div class="swiper-slide">
                    <img src="/img/uploadImages/<%=value.img_name%>" alt="">
                  </div>
                  <% }); %>
                </div>
                <div class="swiper-pagination"></div>
              </div>
            </div>
          <div class="col-lg-4">
            <div class="portfolio-info">
              <input type="hidden" name="co_idx" id="co_idx" value="<%=data.co_idx%>">
              <h3><%= data.subject %> 
                <% if (user && data.user_id == user.id) { %>
                  <button type="button" onclick="DeletePhotos()" style="border: 0; font-size: 5px;">DEL</button>
                <% } %>
              </h3>
              <ul>
                <li><strong>Category</strong> : <%= data.category%></li>
                <li><strong>Photographers</strong> : <%= data.user_id %></li>
                <li><strong>Write Date</strong> : <%=data.regDate%></li>
              </ul>
            </div>
            <div class="portfolio-description">
              <h2>Detail</h2>
              <p>
                <%= data.contents %>
              </p>
            </div>
            <div class="portfolio-description">
              <h2>Like</h2>
              <% 
              var heart = 0;
              var likes = 0;
              var wow = 0;
              var star = 0;

              if(likeData.length != 0){
              likeData.forEach((value) => { %>
                <% if(value.type == 'heart'){ heart = 1; %>
                  <a class="like likeOn" onclick="likeThis('heart');" data-status="1" id="heart">
                      <i class="fa-regular fa-heart"></i>
                  </a>
                <% } else if(value.type == 'likes'){ likes = 1; %>
                <a class="like likeOn" onclick="likeThis('likes');" data-status="1" id="likes">
                  <i class="fa-regular fa-thumbs-up"></i>
                </a>
                <% } else if(value.type == 'wow'){ wow = 1; %>
                <a class="like likeOn" 
                    onclick="likeThis('wow');" data-status="1" id="wow">
                    <i class="fa-regular fa-face-flushed"></i>
                </a>
                <% } else if(value.type == 'star'){ star = 1; %>
                <a class="like likeOn" onclick="likeThis('star');" data-status="1" id="star">
                    <i class="fa-regular fa-face-grin-stars"></i>
                </a>
                <% } else { return } %>
              <% })
              if(heart == 0 ){ %>
                <a class="like" onclick="likeThis('heart');" data-status="0" id="heart"><i class="fa-regular fa-heart"></i></a>
              <% } 
              if(likes == 0){ %>
                <a class="like" onclick="likeThis('likes');" data-status="0" id="likes"><i class="fa-regular fa-thumbs-up"></i></a>
              <% }
              if(wow == 0){ %>
                <a class="like" onclick="likeThis('wow');" data-status="0" id="wow"><i class="fa-regular fa-face-flushed"></i></a>
              <% }
              if(star == 0){ %>
                <a class="like" onclick="likeThis('star');" data-status="0" id="star"><i class="fa-regular fa-face-grin-stars"></i></a>
              <% }
            }else{ %>
              <a class="like" onclick="likeThis('heart');" data-status="0" id="heart"><i class="fa-regular fa-heart"></i></a>
              <a class="like" onclick="likeThis('likes');" data-status="0" id="likes"><i class="fa-regular fa-thumbs-up"></i></a>
              <a class="like" onclick="likeThis('wow');" data-status="0" id="wow"><i class="fa-regular fa-face-flushed"></i></a>
              <a class="like" onclick="likeThis('star');" data-status="0" id="star"><i class="fa-regular fa-face-grin-stars"></i></a>
            <% } %>
            </div>
          </div>
        </div>
      </div>
    </section><!-- End Portfolio Details Section -->
  </main><!-- End #main -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="/assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="/assets/vendor/waypoints/noframework.waypoints.js"></script>
  <script src="/assets/vendor/php-email-form/validate.js"></script>

  <script>
    const DeletePhotos = () => {
      fetch(`/photos`, {
        method: "DELETE",
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify({
            idx: document.getElementById("co_idx").value
        })
      }).then((res) => {
            if (res.status == 200) {
                location.href = '/photos'
            }
      })
  }

    const likeThis = (type) => {
    var co_idx = document.getElementById('co_idx').value;
    var status = document.querySelector("#"+type);
    var url;

    if(status.dataset.status == 0){
      let response = fetch(`/photos/like`, {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify({
            type: type,
            co_idx: co_idx
        })
      }).then((res) => {
          if (res.status === 200) {
              //색칠하기
              document.getElementById(type).className += ' likeOn';
              status.dataset.status =1;
          }else{
              return res.json();
          }
      }).then((data) => {
          alert(data.message);
      })
    }else{
      let response = fetch(`/photos/likeCancel`, {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify({
            type: type,
            co_idx: co_idx
        })
      }).then((res) => {
        if (res.status === 200) {
            //색빼기
            document.getElementById(type).className = ' like';
            status.dataset.status = 0;

        }else{
            return res.json();
        }
      }).then((data) => {
        alert(data.message);
      })
    }
    }
  </script>

</body>

</html>