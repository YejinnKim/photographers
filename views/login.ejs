<%-include('header.ejs')%>
  <section id="breadcrumbs" class="breadcrumbs">
	<div class="container">
	  <div class="d-flex justify-content-between align-items-center">
		<h2>Login / Signup</h2>
		<ol>
		  <li><a href="/">Home</a></li>
		  <li>Login/Signup</li>
		</ol>
	  </div>
	</div>
  </section><!-- End Breadcrumbs -->

	<div class="section loginSection">
		<div class="container">
			<div class="row full-height justify-content-center">
				<div class="col-12 text-center align-self-center py-5">
					<div class="section pb-5 pt-5 pt-sm-2 text-center">
						<h6 class="mb-0 pb-3"><span style="color:#2a2b38;">로그인</span><span style="color:#2a2b38;">회원가입</span></h6>
			          	<input class="checkbox" type="checkbox" id="reg-log" name="reg-log"/>
			          	<label for="reg-log"></label>
						<div class="card-3d-wrap mx-auto">
							<div class="card-3d-wrapper">
								<div class="card-front">
									<div class="center-wrap">
										<div class="section text-center">
											<h4 class="mb-4 pb-3">로그인</h4>
											<div class="form-group">
												<input type="text" name="logid" class="form-style" placeholder="아이디를 입력하세요." id="logid" autocomplete="off" autofocus>
												<i class="input-icon uil uil-at"></i>
											</div>	
											<div class="form-group mt-2">
												<input type="password" name="logpass" class="form-style" placeholder="패스워드를 입력하세요." id="logpass" autocomplete="off">
												<i class="input-icon uil uil-lock-alt"></i>
											</div>
											<a href="#" class="btn mt-4" onclick="login();">로그인</a>
                            				<!-- <p class="mb-0 mt-4 text-center"><a href="#0" class="link">Forgot your password?</a></p> -->
				      					</div>
			      					</div>
			      				</div>
								<div class="card-back">
									<div class="center-wrap">
										<div class="section text-center">
											<h4 class="mb-4 pb-3">회원가입</h4>
											<div class="form-group">
												<input type="text" name="regname" class="form-style" placeholder="이름을 입력하세요." id="regname" autocomplete="off" required>
												<i class="input-icon uil uil-user"></i>
											</div>	
											<div class="form-group mt-2">
												<input type="text" name="regid" class="form-style" placeholder="아이디를 입력하세요." id="regid" autocomplete="off" required>
												<i class="input-icon uil uil-at"></i>
											</div>	
											<div class="form-group mt-2">
												<input type="password" name="regpass" class="form-style" placeholder="비밀번호를 입력하세요." id="regpass" autocomplete="off"  onKeyup="checkPw()" required>
												<i class="input-icon uil uil-lock-alt"></i>
											</div>
											<div class="form-group mt-2">
												<input type="password" name="regpass2" class="form-style" placeholder="비밀번호를 다시 입력하세요" id="regpass2" autocomplete="off" onKeyup="checkPw()" required />
												<i class="input-icon uil uil-lock-alt"></i><p id="pwstat"></p>
											</div>
											<div class="form-group mt-2">
												<input type="email" name="regmail" class="form-style" placeholder="이메일을 입력하세요." id="regmail" autocomplete="off" required>
												<i class="input-icon uil uil-lock-alt"></i>
											</div>
											<a href="#" class="btn mt-4" onclick="signup();">회원가입</a>
				      					</div>
			      					</div>
			      				</div>
			      			</div>
			      		</div>
			      	</div>
		      	</div>
	      	</div>
	    </div>
	</div>
<!-- partial -->
</body>
<script src="/assets/js/login.js"></script>
</html>
